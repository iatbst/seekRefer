<p>
  <strong>Compnay</strong>
  <%= @company.name %>
</p>
 
<p>
  <strong>About</strong>
  <%= @company.description %>
</p>

<p>
  <strong>Website</strong>
  <%= @company.website %>
</p>


<table class="table table-hover">
  <tr>
    <th>User Name</th>
    <th>Company</th>
    <th>Department</th>
    <th>Position</th>
    <% if current_user.try(:admin?) %>
    <th>Email</th>
    <% end %>
    
    <th></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.company %></td>
      <td><%= user.dept %></td>
      <td><%= user.position %></td>
      <% if current_user.try(:admin?) %>
      <td><%= user.email %></td>
      <% end %>
      <td><%= link_to 'Connect', controller:"users", action: "connect", id: user.id %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', companies_path %>

