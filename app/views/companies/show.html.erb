<div class="container-fluid">
    <div class="row-fluid">
    	<div class="span5">
    		<%= image_tag @company.logo.url(:medium) %>
    	</div>
    	<div class="span5">
    		<!--Body content-->
    		<div class="row-fluid">
  				<div class="span2">公司</div>
  				<div class="span8"><%= @company.name %></div>
			</div>
			<div class="row-fluid">
  				<div class="span2">关于</div>
  				<div class="span8"><%= @company.description %></div>
			</div>
			<div class="row-fluid">
  				<div class="span2">网址</div>
  				<div class="span8"><%= @company.website %></div>
			</div>   	
    			
    	</div>
    </div>
</div>


<br />
<br />
<br />
<br />

<table class="table table-hover">
  <tr>
  	<th></th>
    <th>用户名</th>
    <th>部门</th>
    <th>职位</th>  
    <th></th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
    	  <td><%= image_tag user.avatar.url(:thumb) %></td>
      <td><%= user.name %></td>
      <td><%= user.dept %></td>
      <td><%= user.position %></td>
      <% if current_user.try(:admin?) %>
      <td><%= user.email %></td>
      <% end %>
      <td><%= link_to '联系请求', :controller => "connect_requests", :action => "send_request", :id => user.id %></td>
    </tr>
  <% end %>
</table>

