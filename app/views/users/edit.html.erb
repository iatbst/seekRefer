<h1>Editing user</h1>
 
<%= form_for :user, url: user_path(@user), method: :patch do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :company %><br>
    <%= f.text_area :company %>
  </p>

  <p>
    <%= f.label :dept %><br>
    <%= f.text_area :dept %>
  </p>
  
  <p>
    <%= f.label :position %><br>
    <%= f.text_area :position %>
  </p>
   
  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', companies_path %>