

<div class="container">
  <div class="span6 offset3">

<%= form_for @case, :url => {:action => 'destroy'} do |f| %>
  
  <%= f.label :result , "结果"%>
  <%= f.select :result, ["被拒", "拒绝offer", "接受offer" ],{},{:class => 'selectpicker'} %>
 
  <%= f.label :feedback , "评价推荐人"%>
  <%= f.select :feedback, ["3分:积极推荐并提供面试帮助", "2分:积极推荐", "1分:一般" ],{},{:class => 'selectpicker'} %>
 
  <%= label_tag :comment, "想对推荐人说:"%>
  <%= text_area_tag :comment %>
       
  <%= hidden_field_tag :id, @case.id %>
 
  
  <%= submit_tag "关闭Case", class: "btn btn-primary" %>
<% end %>

  </div>
 </div>
