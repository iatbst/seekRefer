<table class="table table-hover">
  <tr>
    <th>User Name</th>
    <th>Company</th>
    <th>Department</th>
    <th>Position</th>
    <% if current_user.try(:admin?) %>
    <th>Email</th>
    <% end %>
    
    <th></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.company %></td>
      <td><%= user.dept %></td>
      <td><%= user.position %></td>
      <% if current_user.try(:admin?) %>
      <td><%= user.email %></td>
      <% end %>
      <td><%= link_to 'Disconnect', controller:"connect_requests", action:"disconnect", id:user.id, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>