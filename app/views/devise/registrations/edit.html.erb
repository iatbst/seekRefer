<h2>更新</h2>

<div class="row">
  <div class="span6 offset3">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :avatar ,  "上传头像"%>
  <%= f.file_field :avatar %>
 	  
  <%= f.label :email, "邮箱"%>
  <%= f.email_field :email, :autofocus => true %>
  
  <%= f.label :location_id ,"地区"%>
  <%= f.select(:location_id, Location.all.map {|h| [h.name, h.id]},{:prompt => "选择地区"},{:class => 'selectpicker'}) %>
  
  <%= f.label :company_id ,"公司"%>
  <%= f.select(:company_id, Company.all.map {|h| [h.name, h.id]},{:prompt => "选择公司"},{:class => 'selectpicker'}) %>
  
  <%= f.label :dept, "部门" %>
  <%= f.text_field :dept %>
      
  <%= f.label :position, "职位" %>
  <%= f.text_field :position %>
  

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    Currently waiting confirmation for: <%= resource.unconfirmed_email %>
  <% end %>

  <%= f.label :password, "密码"%> <i>(请保持空白如果不修改密码)</i>
  <%= f.password_field :password, :autocomplete => "off" %>
  
  <%= f.label :password_confirmation, "密码确认" %>
  <%= f.password_field :password_confirmation %>

  <%= f.label :current_password, "当前密码"%> <i>(修改密码前请输入当前密码)</i><br />
  <%= f.password_field :current_password %>
  
  <%= f.label :hometown_id, "家乡" %>
  <%= f.select(:hometown_id, ChinaCity.all.map {|h| [h.province, h.id]},{:prompt => "选择家乡"},{:class => 'selectpicker'}) %>

  <%= f.label :china_school1_id, "国内毕业院校"%>
  <%= f.select(:china_school1_id, ChinaCollege.all.map {|h| [h.name, h.id]},{:prompt => "选择院校"},{:class => 'selectpicker'}) %>
      
  <%= f.label :us_school1_id, "海外毕业院校" %>
  <%= f.select(:us_school1_id, UsCollege.all.map {|h| [h.name, h.id]},{:prompt => "选择院校"},{:class => 'selectpicker'}) %> <br /><br />

  <%= f.submit "更新", class: "btn btn-large btn-primary" %>
<% end %>

